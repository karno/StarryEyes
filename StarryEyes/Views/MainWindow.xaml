                                     DataContext="{Binding InputAreaAccountSelectorViewModel}" />
        <windowParts:AccountSelector Grid.RowSpan="2"
                                     Margin="0,-30,0,0"
                                     DataContext="{Binding GlobalAccountSelectorViewModel}" />
    </Grid>
